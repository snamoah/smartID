<h1>Credentials</h1>

<%= link_to "Add Credential", new_user_credential_path(@user) %>


<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Number</th>
  </tr>
</thead>
<tbody>
  <% if @credentials.blank? %>
    <tr>
      <td colspan="2"><h3 class="text-center">No Credentials entered yet</td>
    </tr>
  <% else %>
<% @credentials.each do |c| %>
  <tr>
    <td><%= c.name %></td>
    <td><%= c.number %></td>
    <td class="text-right"><%= link_to "Edit", edit_user_credential_path(@user, c), class: 'btn btn-primary' %>
    <%= link_to "Delete", user_credential_path(@user, c), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</tbody>
<% end %>
</table>
