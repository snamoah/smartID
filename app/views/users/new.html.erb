
<div class="wrapper">

<%= form_tag users_path, :method => "post", :class => "form-signin" do |f| %>
  <h2 class="form-signin-heading">Sign Up</h2>
      <input type="text" class="form-control" name="firstname" placeholder="First Name" required="" autofocus="" />
      <input type="text" class="form-control" name="lastname" placeholder="Last Name" required="" autofocus="" />
      <input type="text" class="form-control" name="username" placeholder="Username" required="" autofocus="" />
      <input type="email" class="form-control" name="email" placeholder="Email" required="" autofocus="" />
      <input type="password" class="form-control" name="password" placeholder="Password" required=""/> 
      <input type="password" class="form-control" name="password_confirmation" placeholder="Confirm password" required=""/> 
      
      <div class="control-group">
        <label class="control-label">Gender</label>
          <div class="controls">
            
            <p><div id="gender" name="gender" class="btn-group" data-toggle="buttons-radio">
              <button type="button" class="btn btn-info">Male</button>
              <button type="button" class="btn btn-info">Female</button>
            </div></p>
          </div>
      </div>
    <%= submit_tag "Sign up", :class => "btn btn-primary btn-lg btn-block" %>
<% end %>
</div>